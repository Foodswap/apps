{
  "name": "foodswap",
  "version": "0.0.1",
  "main": "index.js",
  "dependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "concurrently": "^6.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "express-jsdoc-swagger": "^1.3.2",
    "git-cz": "^4.7.6",
    "husky": "^5.2.0",
    "wait-on": "^5.3.0"
  },
  "scripts": {
    "prepare": "husky install",
    "install": "npm i --prefix apps/front && npm i --prefix apps/back",
    "start": "concurrently -n docker,api,app \"npm:start:docker\" \"npm:start:back\" \"npm:start:front\"",
    "start:front": "wait-on tcp:3000 && npm start --prefix apps/front",
    "start:back": "wait-on tcp:5432 && npm start --prefix apps/back",
    "start:docker": "docker-compose up",
    "commit": "cz",
    "update:version": "standard-version -a && git push --follow-tags"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Foodswap/apps.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Foodswap/apps/issues"
  },
  "homepage": "https://github.com/Foodswap/apps#readme"
}
